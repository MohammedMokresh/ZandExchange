<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/currencyCustomCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_above="@+id/devider"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sellPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:text="Sell Price : 25,400"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buyPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:text="Buy Price    : 25,00"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lastUpdate"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="right"

                    android:text="sdsdsdsdsdsdsdsds"
                    android:textSize="11sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/flagIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/zand_icon" />

            <TextView
                android:id="@+id/currencyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/flagIcon"
                android:text="@string/app_name" />




            <View
                android:id="@+id/devider"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/currencyName"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TvNormal"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="24dp"
                android:layout_below="@+id/devider"
                android:text="status"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
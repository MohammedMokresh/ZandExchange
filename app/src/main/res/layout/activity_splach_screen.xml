<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.sarafizand.sarafizand.activities.SplachScreenActivity">


    <RelativeLayout
        android:id="@+id/loadingFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <com.tbuonomo.circleloading.CircleLoading
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:innerColor="@color/white"
            app:innerAlpha="255"
            app:outerColor="@color/gray"
            app:outerAlpha="180"
            app:animationDuration="850"/>
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/zand_icon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
